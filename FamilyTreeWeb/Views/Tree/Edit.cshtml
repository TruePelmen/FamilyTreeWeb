@model FamilyTreeWeb.Models.Tree
@{
    ViewBag.Title = "Редагування дерева";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #144509 !important;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 2rem;
        }

        .jumbotron {
            background-image: url('https://img.freepik.com/premium-photo/collage-photographs-including-one-artists-family_662214-33221.jpg');
            background-size: cover;
            background-position: center;
            color: #ffffff;
            position: relative;
            overflow: hidden;
            margin-bottom: 30px;
            height: 100px;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .jumbotron-content {
            position: relative;
            z-index: 1;
            padding: 100px 0;
            text-align: center;
        }

        .jumbotron h1 {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .lead {
            font-size: 1.5rem;
        }

        .tree-container {
            max-height: 500px;
            overflow-y: auto;
        }

        .tree-item {
            border: 1px solid #dee2e6;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 20px;
            background-color: #fff;
            transition: transform 0.3s ease;
        }

            .tree-item:hover {
                transform: scale(1.02);
            }

        .tree-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .tree-description {
            font-size: 1rem;
        }

        .search-form {
            margin-top: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Дерево Роду</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Головна", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Tree")">Створити дерево</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Редагування дерева</h1>
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва дерева</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryPerson" class="control-label">Основна особа</label>
                <input asp-for="PrimaryPerson" class="form-control" />
                <span asp-validation-for="PrimaryPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тип дерева</label>
                <select asp-for="Type" class="form-control">
                    <option value="public">Публічне</option>
                    <option value="private">Приватне</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
