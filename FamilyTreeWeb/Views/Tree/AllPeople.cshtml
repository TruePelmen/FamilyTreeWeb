@model List<FamilyTreeWeb.Models.Person>

@{
    ViewData["Title"] = "Всі особи в дереві";
}

<!DOCTYPE html>
<html>
<head>
    <title>Календар</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .calendar {
            display: grid;
            grid-template-columns: repeat(1, 1fr); /* Змінено на одну колонку */
            gap: 10px;
        }

        .day {
            padding: 10px;
            background-color: #f0f0f0;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px; /* Додано відступ між днями */
            position: relative;
        }

        .person-card {
            background-color: #CDD7CB;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 10px;
            margin-bottom: 10px;
            width: 100%;
            transition: transform 0.3s ease;
        }

            .person-card:hover {
                transform: scale(1.05);
            }

            .person-card img {
                width: 20%;
                border-radius: 50%;
            }

            .person-card h3 {
                margin: 10px;
                color: #144509;
            }

            .person-card a {
                text-decoration: none;
                color: #144509;
                transition: color 0.3s ease;
            }

                .person-card a:hover {
                    color: #0d2f0b;
                }

        .navbar {
            background-color: #144509 !important;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 2rem;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-p">
            <a class="navbar-brand" href="#"></a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Головна</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewTree", "Tree", new {id = Model[0].Tree.PrimaryPerson})">Дерево</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Gallery", "Photo", new {id = Model[0].Tree.Id})">Галерея</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Edit", "Tree", new {id = Model[0].Tree.Id} )">Редагувати дерево</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Всі особи дерева</h1>
        <div class="calendar">
            @foreach (var person in Model)
            {
                    <div onclick="window.location.href='@Url.Action("Profile", "Profile", new { id = person.Id })'">
                        <div class="person-card">
                            @if (person.MainPhoto != null)
                            {
                                <img src="@person.MainPhoto.FilePath" alt="Фото" />
                            }
                            else if (person.Gender == "male")
                            {
                            <img src="https://cdn-icons-png.flaticon.com/512/700/700674.png" />
                            }
                            else
                            {
                            <img src="https://cdn-icons-png.flaticon.com/512/4042/4042422.png" />
                            }
                            <h3>@person.FullName</h3>
                        </div>
                    </div>
            }
        </div>
    </div>
</body>
</html>
