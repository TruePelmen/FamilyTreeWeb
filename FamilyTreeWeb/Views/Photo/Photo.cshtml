@model FamilyTreeWeb.Models.Photo
<!DOCTYPE html>
<html>
<head>
    <title>Детальна інформація про фото</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .navbar {
            background-color: #144509 !important;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 2rem;
        }

        .photo-details {
            position: relative;
            display: flex;
            padding: 20px;
        }

        .photo {
            margin-right: 20px;
            flex: 1;
        }

            .photo img {
                width: 70%;
                height: auto;
                border-radius: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

        .details {
            flex: 1;
        }

            .details h2 {
                margin-top: 0;
                color: #144509;
            }

            .details p {
                margin: 5px 0;
                color: #666666;
            }

            .details button {
                background-color: #144509;
                color: #ffffff;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                margin-top: 10px;
            }

                .details button:hover {
                    background-color: #0d2f0b;
                }

        .person-card {
            background-color: #CDD7CB;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
            margin-bottom: 40px;
            max-width: 400px;
            width: 60%;
            height: 20%;
            transition: transform 0.3s ease;
        }

            .person-card:hover {
                transform: scale(1.05);
            }

            .person-card img {
                width: 20%;
                border-radius: 50%;
            }

            .person-card h3 {
                margin: 10px;
                color: #144509;
            }

            .person-card a {
                text-decoration: none;
                color: #144509;
                transition: color 0.3s ease;
            }

                .person-card a:hover {
                    color: #0d2f0b;
                }

        .navbar {
            background-color: #144509 !important;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-size: 2rem;
        }
    </style>
</head>
